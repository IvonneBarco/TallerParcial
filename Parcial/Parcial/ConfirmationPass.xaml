<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial.ConfirmationPass">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10,12" Margin="10,0,10,0">
            <StackLayout Orientation="Vertical"  Margin="0,50,0,0">
                <Label Text="CONFIRMATION" FontAttributes="Bold" FontSize="18" HorizontalOptions="CenterAndExpand" />
            </StackLayout>

            <StackLayout Orientation="Vertical"  Margin="10,30,10,0">
                <Label Text="We have sent a message with your new password to the email:" FontSize="18" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0" />
            </StackLayout>

            <StackLayout Orientation="Vertical"  Margin="10,10,20,10">
                <Label Text="user@user.com" FontSize="18" TextColor="#2196F3" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0" />
            </StackLayout>

            <StackLayout Orientation="Vertical"  Margin="0,30,0,0">
                <Button HorizontalOptions="FillAndExpand" Text="LOGIN" BackgroundColor="#CDDC39" />
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>