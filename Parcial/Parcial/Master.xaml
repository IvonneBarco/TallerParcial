<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Parcial.Master"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="5,5,5,5" BackgroundColor="#EAEDEF">

            <StackLayout Orientation="Vertical" BackgroundColor="#1DADEB" Margin="5,5,5,5">
                <Image Source="usuario.png" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,10,10,0" WidthRequest="70"/>
                <Label Text="INICIO" Font="Bold" FontSize="15" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,5,0,0"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Image Source="cart.png" WidthRequest="50" HeightRequest="50"/>
                <Button Text="Ver mis compras" FontSize="10" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" >
                <Image Source="list.png" WidthRequest="50" HeightRequest="50"/>
                <Button Text="Listar Usuarios" FontSize="10" />
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Image Source="about.png" WidthRequest="50" HeightRequest="50"/>
                <Button Text="Acerca de" FontSize="10" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>